# content-foreground = #343638

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 0

label-focused = %index%
label-focused-underline = #343638
label-focused-padding = 1

label-unfocused = %index%
label-unfocused-padding = 1

label-visible = %index%
label-visible-padding = 1

label-urgent = %index%
label-urgent-padding = 1

[module/date]
type = internal/date
interval = 1

date = "%a %b %d"
time = "%I:%M %p"
label = " %date% %time%"

[module/weather]
type = custom/script
exec = ~/.scripts/weather
interval = 600
background = #0000ff
click-left = chromium "https://openweathermap.org/city/508101"

[module/pulseaudio-control]
type = custom/script
tail = true

exec = pulseaudio-control --icons-volume " , " --icon-muted " " --sink-nicknames-from "device.description" listen

click-middle = exec pavucontrol &
click-left = pulseaudio-control togmute
click-right = pulseaudio-control next-sink
scroll-up = pulseaudio-control --volume-max 130 up
scroll-down = pulseaudio-control --volume-max 130 down

[module/hashrate]
type = custom/script
exec = ~/.scripts/hashrate
interval = 10

click-left = chromium "https://www.nicehash.com/my/mining/rigs"
click-right = chromium "http://127.0.0.1:4067/"

[global/wm]
margin-top = 0
margin-bottom = 0

