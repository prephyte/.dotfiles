[bar/mybar]
width = 100%
height = 30
fixed-center = true
enable-ipc = true
bottom = false

background = #1d1f21
foreground = #c5c8c6

padding-left = 0
padding-right = 1
module-margin-left = 0
module-margin-right = 0

font-0 = "Source Code Pro Semibold:size=10;1"
font-1 = "Font Awesome 5 Pro:style=Solid:size=10;1"
font-2 = "Font Awesome 5 Brands:size=10;1"

modules-left = i3
modules-center = date
modules-right = hashrate sep weather sep pulseaudio-control

underline-size = 3
dpi = ${xrdb:Xft.dpi:-1}

cursor-click = pointer
cursor-scroll = ns-resize

# tray-detached = false
# tray-position = right
# tray-padding = 3

[module/sep]
type = custom/text
content = "|"
content-padding = 1
content-foreground = #343638

# [module/tray-separator]
# type = custom/text
# content = " |"
