[bar/mybar]
width = 100%
height = 30
fixed-center = true
enable-ipc = true
bottom = false
dpi = ${xrdb:Xft.dpi:-1}

background = #1d1f21
foreground = #c5c8c6

padding-left = 0
padding-right = 1
module-margin-left = 1
module-margin-right = 1

font-0 = "Source Code Pro Semibold:size=10;1"
font-1 = "Font Awesome 5 Pro:style=Solid:size=10;1"
font-2 = "Font Awesome 5 Brands:size=10;1"

modules-left = i3
modules-right = weather pulseaudio-control date

separator = "|"
separator-foreground = #343638
underline-size = 3

cursor-click = pointer
cursor-scroll = ns-resize

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 0

label-focused = %index%
label-focused-underline = #343638
label-focused-padding = 1

label-unfocused = %index%
label-unfocused-padding = 1

label-visible = %index%
label-visible-padding = 1

label-urgent = %index%
label-urgent-padding = 1

[module/date]
type = internal/date
interval = 1

date = "%a %b %d"
time = "%I:%M %p"
label = " %date% %time%"

[module/weather]
type = custom/script
exec = ~/.scripts/weather

[module/pulseaudio-control]
type = custom/script
tail = true

exec = pulseaudio-control --icons-volume " , " --icon-muted " " --sink-nicknames-from "device.description" listen

click-middle = exec pavucontrol &
click-left = pulseaudio-control togmute
click-right = pulseaudio-control next-sink
scroll-up = pulseaudio-control --volume-max 130 up
scroll-down = pulseaudio-control --volume-max 130 down

[global/wm]
margin-top = 0
margin-bottom = 0

